<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="19" />
    <option name="FONT_FAMILY" value="Fira Code" />
    <option name="FONT_SCALE" value="1.25" />
    <option name="USE_LIGATURES" value="true" />
    <option name="SECONDARY_FONT_FAMILY" value="Source Code Pro" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="" />
    <option name="IS_ENSURE_NEWLINE_AT_EOF" value="true" />
    <option name="SHOW_QUICK_DOC_ON_MOUSE_OVER_ELEMENT" value="true" />
    <option name="IS_WHEEL_FONTCHANGE_ENABLED" value="true" />
    <option name="KEEP_TRAILING_SPACE_ON_CARET_LINE" value="false" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern icon="important" useCustomColors="true" pattern="\s+dev\s+">
      <option name="FOREGROUND" value="1d200" />
      <option name="BACKGROUND" value="ff0008" />
      <option name="FONT_TYPE" value="1" />
    </pattern>
    <filter name="TODO">
      <pattern index="0" />
    </filter>
    <filter name="DEV">
      <pattern index="2" />
    </filter>
  </component>
</application>